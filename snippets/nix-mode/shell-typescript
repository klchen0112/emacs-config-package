{ nixpkgsPath ? <nixpkgs>, nodeVersion ? "${1:10_x}" }:

with import nixpkgsPath {};

let
  nodejs = pkgs."nodejs-\${nodeVersion}";
in mkShell {
  buildInputs = [
    nodePackages.javascript-typescript-langserver
    nodePackages.prettier
    nodePackages.typescript
    nodejs
    yarn
    yarn2nix
  ];
}
